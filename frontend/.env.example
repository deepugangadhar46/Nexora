# ============================================
# NEXORA Frontend Environment Variables
# ============================================
# Copy this file to .env.local and update values

# Backend API URL (Python FastAPI)
VITE_API_URL=http://localhost:8000

# Environment
VITE_ENV=development

# Demo Mode (set to 'true' for hackathon demos)
VITE_DEMO_MODE=false

# Sentry DSN (optional)
VITE_SENTRY_DSN=

# ============================================
# Note: Vite uses VITE_ prefix for env vars
# that should be exposed to the browser
# ============================================
