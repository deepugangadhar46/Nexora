# ============================================================
# NEXORA ENVIRONMENT CONFIGURATION TEMPLATE
# ============================================================
# Copy this file to .env and fill in your actual values
# NEVER commit the actual .env file to version control!

# ============================================================
# DATABASE CONFIGURATION
# ============================================================
# MySQL Database Connection (Required)
DB_NAME=your_database_name
DB_HOST=your_database_host
DB_PORT=3306
DB_USER=your_database_user
DB_PASSWORD=your_secure_password
SSL_MODE=REQUIRED
CA_CERT=path/to/ca-certificate.pem

# ============================================================
# AUTHENTICATION
# ============================================================
# NextAuth Configuration (Required for auth)
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="generate-a-secure-random-string-here"

# ============================================================
# AI API KEYS
# ============================================================
# AI Model Providers (At least one required)
GROQ_API_KEY=your_groq_api_key
HF_TOKEN=your_huggingface_token
KIMI_API_KEY=your_kimi_api_key

# Voice Generation (Optional - for pitch deck narration)
ELEVENLABS_API_KEY=your_elevenlabs_api_key

# ============================================================
# FILE STORAGE
# ============================================================
# Cloudinary Configuration (Required for file uploads)
CLOUDINARY_CLOUD_NAME="your_cloud_name"
CLOUDINARY_API_KEY="your_api_key"
CLOUDINARY_API_SECRET="your_api_secret"
FILE_STORAGE_PROVIDER="cloudinary"

# ============================================================
# DEPLOYMENT & MONITORING
# ============================================================
# Vercel (Optional - for deployments)
VERCEL_TOKEN="your_vercel_token"
VERCEL_TEAM_ID="your_team_id"

# Sentry (Optional - for error tracking)
SENTRY_DSN="your_sentry_dsn"
SENTRY_AUTH_TOKEN="your_sentry_auth_token"

# ============================================================
# EXTERNAL SERVICES
# ============================================================
# Web Scraping (Required for research features)
FIRECRAWL_API_KEY="your_firecrawl_api_key"

# Sandbox Provider (Required for MVP development)
SANDBOX_PROVIDER=e2b
E2B_API_KEY="your_e2b_api_key"

# Chart Generation (Free service - no key needed)
QUICKCHART_API_URL="https://quickchart.io/chart"

# ============================================================
# ERROR MONITORING & ANALYTICS
# ============================================================
# Sentry (Recommended for production)
SENTRY_DSN="your_sentry_dsn_here"
VITE_SENTRY_DSN="your_sentry_dsn_here"

# Plausible Analytics (Optional)
VITE_PLAUSIBLE_DOMAIN="nexora.ai"

# Environment
ENVIRONMENT="development"

# ============================================================
# OPTIONAL SERVICES (Uncomment if needed)
# ============================================================
# Redis Caching (Recommended for performance)
REDIS_URL="redis://localhost:6379"
REDIS_HOST="localhost"
REDIS_PORT=6379

# Firebase Real-time Features
# FIREBASE_API_KEY=""
# FIREBASE_AUTH_DOMAIN=""
# FIREBASE_PROJECT_ID=""

# JWT Secret (Required for authentication)
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"

# ============================================================
# OAUTH CONFIGURATION
# ============================================================
# Google OAuth (Backend - no VITE prefix)
GOOGLE_CLIENT_ID="your_google_client_id"
GOOGLE_CLIENT_SECRET="your_google_client_secret"
GOOGLE_REDIRECT_URI="http://localhost:8080/auth/google/callback"

# GitHub OAuth (Backend - no VITE prefix)
GITHUB_CLIENT_ID="your_github_client_id"
GITHUB_CLIENT_SECRET="your_github_client_secret"
GITHUB_REDIRECT_URI="http://localhost:8080/auth/github/callback"

# ============================================================
# FRONTEND CONFIGURATION (VITE_ prefix required)
# ============================================================
# API Configuration
VITE_API_URL="http://localhost:8000"
VITE_SITE_URL="http://localhost:5173"

# OAuth Client IDs (Frontend - VITE prefix required)
VITE_GOOGLE_CLIENT_ID="your_google_client_id"
VITE_GITHUB_CLIENT_ID="your_github_client_id"

# Feature Flags
VITE_DEMO_MODE="false"
VITE_ENABLE_PAYMENTS="true"
VITE_PAYMENT_PROVIDER="stripe"
